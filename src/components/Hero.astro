---
// Hero component in Astro
import { Image } from 'astro:assets';
---

<div
	class="container mx-auto px-4 py-16 sm:py-20 min-h-screen flex flex-col items-center justify-center"
	id="hero"
>
	<div class="flex flex-col lg:flex-row items-center gap-10 lg:gap-16">
		<div class="max-w-xl text-center lg:text-left">
			<h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold font-mono tracking-widest cursor-pointer pb-6 sm:pb-8 animate-fade-in-up delay-200">
				<span class="transition-all duration-500 hover:mr-2 hover:text-white">
					Hi
				</span>{" "}
				<span class="transition-all duration-500 hover:ml-8 hover:text-white">
					I'm
				</span>{" "}
				<span class="transition-all duration-500 hover:text-white">
					Srđan
				</span>{" "}
				<span class="transition-all duration-500 hover:text-white">
					Čukić
				</span>{" "}
				<br />
				<span class="transition-all duration-500 hover:text-white">
					Frontend
				</span>{" "}
				<span class="transition-all duration-500 hover:text-white">
					Developer
				</span>
			</h1>
		</div>
		<div class="animate-fade-in-up delay-400 hidden lg:block">
			<Image
				src="/images/box.png"
				alt="Box"
				width={160}
				height={160}
				class="w-40 h-40 object-contain mx-auto"
				loading="eager"
			/>
		</div>
	</div>
	<div class="flex flex-col sm:flex-row justify-center items-center sm:items-stretch gap-3 sm:gap-4 mt-10 sm:mt-16 w-full max-w-sm sm:max-w-xl">
		<a
			href="/Frontend_Resume.pdf"
			download="Srdjan_Cukic_Frontend_Developer_CV.pdf"
			class="flex items-center justify-center gap-2 px-5 py-2.5 text-sm sm:text-base text-[#56d2c6] font-bold rounded-full shadow-lg hover:shadow-[0_0_20px_rgba(86,210,198,0.8)] transition-all duration-300 border-[#56d2c6] border-2 bg-transparent"
		>
			<span class="mr-2">Download CV</span>
			<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
				<path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"></path>
			</svg>
		</a>
		<button
			onclick="document.getElementById('projects')?.scrollIntoView({ behavior: 'smooth' })"
			class="flex items-center justify-center px-5 py-2.5 text-sm sm:text-base text-[#56d2c6] font-bold rounded-full shadow-lg hover:shadow-[0_0_20px_rgba(86,210,198,0.8)] transition-all duration-300 border-[#56d2c6] border-2 bg-transparent"
		>
			Check Portfolio
		</button>
		<button
			onclick="document.getElementById('contact')?.scrollIntoView({ behavior: 'smooth' })"
			class="flex items-center justify-center px-5 py-2.5 text-sm sm:text-base text-[#56d2c6] font-bold rounded-full shadow-lg hover:shadow-[0_0_20px_rgba(86,210,198,0.8)] transition-all duration-300 border-[#56d2c6] border-2 bg-transparent"
		>
			Get in Touch
		</button>
	</div>
</div>

<style>
	.animate-fade-in-up {
		animation: fadeInUp 0.6s ease-out forwards;
	}
	
	.delay-200 {
		animation-delay: 0.2s;
	}
	
	.delay-400 {
		animation-delay: 0.4s;
	}
	
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
</style>